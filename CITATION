year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{fontregisterer}: Cross-platform Auto Font Registerer For R Graphics",
         author = person("Satoshi", "Katagiri", email = "katagiri.stsh@gmail.com"),
         year = year,
         note = note,
         url = "https://github.com/Gedevan-Aleksizde/fontregisterer"
         )
